# OKR Data Pipeline Environment Configuration
# Copy this file to .env and update with your actual values

# API Configuration (Required for plan_tasks_pipeline_dag)
EMAIL=your-email@example.com
PASSWORD=your-password
FIREBASE_API_KEY=your-firebase-api-key
TENANT_ID=your-tenant-id

# Database Configuration
POSTGRES_USER=okr_admin
POSTGRES_PASSWORD=okr_password
POSTGRES_DB=postgres

# Airflow Configuration
AIRFLOW_USER=airflow
AIRFLOW_PASSWORD=airflow
AIRFLOW_DB=airflow

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=plan_tasks_topic

# Dashboard Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-secret-key-change-in-production

# Security (Change in Production)
FERNET_KEY=your-fernet-key-here-change-in-production

# Optional: Email Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_RECIPIENTS=admin@example.com